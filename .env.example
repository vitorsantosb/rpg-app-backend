# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
APP_PORT=4000

# ============================================
# MongoDB Configuration
# ============================================
# OPÇÃO 1: Railway MongoDB (Recomendado - Replica Set já configurado)
# Copie a URI direto do Railway e cole aqui
# MONGO_URI=mongodb://mongo:password@containers-us-west-xxx.railway.app:27017/railway?authSource=admin
# MONGODB_URI=mongodb://mongo:password@containers-us-west-xxx.railway.app:27017/railway?authSource=admin

# OPÇÃO 2: MongoDB Atlas ou outro serviço
# MONGO_URI=mongodb+srv://user:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# OPÇÃO 3: MongoDB Local (Docker)
# Use as variáveis abaixo OU a URI completa
MONGO_URI=mongodb://admin:admin123@localhost:27017/mevi_database?replicaSet=rs0&authSource=admin
MONGO_WRITE_URI=mongodb://admin:admin123@localhost:27017/mevi_database?replicaSet=rs0&readPreference=primary&authSource=admin
MONGO_READ_URI=mongodb://admin:admin123@localhost:27017/mevi_database?replicaSet=rs0&readPreference=secondaryPreferred&authSource=admin

# Variáveis separadas (usadas apenas se MONGO_URI não for definido)
MONGODB_USERNAME=admin
MONGODB_PASSWORD=admin123
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=mevi_database
MONGODB_AUTH_SOURCE=admin
MONGODB_REPLICA_SET=rs0

# ============================================
# Redis Configuration
# ============================================
# Local connection
REDIS_HOST=localhost
REDIS_PORT=6379

# Redis connection for Docker Compose
# REDIS_HOST=redis
# REDIS_PORT=6379

REDIS_PASSWORD=

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# Bcrypt Configuration
# ============================================
BCRYPT_SALT_ROUNDS=10

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ============================================
# Socket.IO Configuration
# ============================================
SOCKET_IO_PORT=4000
SOCKET_IO_CORS_ORIGIN=http://localhost:3000

# ============================================
# Docker Compose Ports (Optional)
# ============================================
FORWARD_MONGODB_PORT=27017
FORWARD_REDIS_PORT=6379

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_PRETTY_PRINT=true

# ============================================
# MongoDB Local Simples (Para Testes)
# ============================================
# Descomente para usar MongoDB local simples (sem auth, sem replica set)
# MONGO_URI=mongodb://localhost:27017/mevi_database
# MONGODB_USE_REPLICA_SET=false
